[{
	"contentType": "application/vnd.microsoft.card.adaptive",
	"content":

    {
        "type": "AdaptiveCard",
        "version": "1.2",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
            {
                "type": "ColumnSet",
                "columns": [
                    {
                        "type": "Column",
                        "width": "auto",
                        "items": [
                            {
                                "type": "Image",
                                "url": "https://community.cisco.com/legacyfs/online/fusion/117586_DNA%20Center%20Graphic.png",
                                "size": "Medium"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [
                            {
                                "type": "TextBlock",
                                "text": "DNA Demo",
                                "wrap": true,
                                "weight": "Bolder",
                                "size": "Medium",
                                "color": "{{ colour1 }}"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ var1 }}",
                                "wrap": true,
                                "color": "{{ colour2 }}"
                            }
                        ]
                    }
                ]
            },
            {
                "type": "TextBlock",
                "text": "{{ var2 }}",
                "wrap": true,
                "color": "{{ colour3 }}"
            },
            {
                "type": "ActionSet",
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Back to üè†",
                        "id": "0",
                        "data": {
                            "card_name": "main"
                        }
                    }
                ],
                "height": "stretch",
                "horizontalAlignment": "Right"
            }
        ]
    }
}]
[{
	"contentType": "application/vnd.microsoft.card.adaptive",
	"content":

    {
        "type": "AdaptiveCard",
        "version": "1.2",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
            {
                "type": "ColumnSet",
                "columns": [
                    {
                        "type": "Column",
                        "width": "auto",
                        "items": [
                            {
                                "type": "Image",
                                "url": "https://community.cisco.com/legacyfs/online/fusion/117586_DNA%20Center%20Graphic.png",
                                "size": "Medium"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [
                            {
                                "type": "TextBlock",
                                "text": "DNA Demo",
                                "wrap": true,
                                "weight": "Bolder",

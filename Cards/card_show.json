                        "id": "show_network_health"
                    },
                    {
                        "type": "Input.Toggle",
                        "title": "show site health",
                        "id": "show_site_health"
                    },
                    {
                        "type": "Input.Toggle",
                        "title": "show devices",
                        "id": "show_devices"
                    }

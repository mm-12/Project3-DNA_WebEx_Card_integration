[{
	"contentType": "application/vnd.microsoft.card.adaptive",
	"content":


	{
		"type": "AdaptiveCard",
		"version": "1.2",
		"$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
		"body": [
			{
				"type": "ColumnSet",
				"columns": [
					{
						"type": "Column",
						"width": "auto",
						"items": [
							{
								"type": "Image",
								"url": "{{ iconURL }}",
								"size": "Medium"
							}
						]
					},
					{
						"type": "Column",
						"width": "stretch",
						"items": [
							{
								"type": "TextBlock",
								"text": "{{ mainTitle }}",
								"wrap": true,
								"weight": "Bolder",
								"size": "Medium",
								"color": "Accent"
							},
							{
								"type": "TextBlock",
								"text": "{{ subTitle }}",
								"wrap": true,
								"color": "Good"
							}
						]
					}
				]
			},
			{
				"type": "Container",
				"items": [
					{
						"type": "ColumnSet",
						"columns": [
							{% for main, buttons in toggle_choiceset.items() %}
							{% set outer_loop = loop %}
							{
								"type": "Column",
								"width": 50,
								"items": [
									{
										"type": "TextBlock",
										"text": "{{ main }}",
										"wrap": true,
										"weight": "Bolder",
										"separator": true,
										"horizontalAlignment": "Center"
									},
									{% for title, button in buttons.items() %}
									{
										"type": "ActionSet",
										"actions": [
											{
												"type": "Action.Submit",
												"title": "{{ title }}",
												"id": "{{ outer_loop.index }}-{{ loop.index }}",
												"data": {
													"button": "{{ button }}"
												}
											}
										],
										"horizontalAlignment": "Center"
									}{% if not loop.last %},{% endif %}
									{% endfor %}
								]
							}{% if not loop.last %},{% endif %}
							{% endfor %}
						],
						"separator": true
					}
				],
				"style": "accent"
			},
			{
				"type": "Input.ChoiceSet",
				"choices": [
					{
						"title": "title",
						"value": "pera"
					}
				],
				"placeholder": "Selected option",
				"id": "main",
				"value": "lala",
				"isVisible": false
			}
		]
	}
}]
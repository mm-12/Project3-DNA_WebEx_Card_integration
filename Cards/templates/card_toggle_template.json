[{
	"contentType": "application/vnd.microsoft.card.adaptive",
	"content":

    {
        "type": "AdaptiveCard",
        "version": "1.2",
        "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
        "body": [
            {
                "type": "ColumnSet",
                "columns": [
                    {
                        "type": "Column",
                        "width": "auto",
                        "items": [
                            {
                                "type": "Image",
                                "url": "{{ iconURL }}",
                                "size": "Medium"
                            }
                        ]
                    },
                    {
                        "type": "Column",
                        "width": "stretch",
                        "items": [
                            {
                                "type": "TextBlock",
                                "text": "{{ mainTitle }}",
                                "wrap": true,
                                "weight": "Bolder",
                                "size": "Medium",
                                "color": "Accent"
                            },
                            {
                                "type": "TextBlock",
                                "text": "{{ subTitle }}",
                                "wrap": true,
                                "color": "Good"
                            }
                        ]
                    }
                ]
            },
            {
                "type": "Container",
                "items": [
                    {% for title, id in toggle_choiceset.items() %}
                    {
                        "type": "Input.Toggle",
                        "title": "{{ title }}",
                        "id": "{{ id }}"
                    }{% if not loop.last %},{% endif %}
                    {% endfor %}
                ],
                "separator": true
            },
            {
                "type": "Container",
                "separator": true,
                "style": "default",
                "items": [
                    {
                        "type": "Input.Toggle",
                        "title": "Output as an attachment",
                        "id": "Attachemnt"
                    }
                ]
            },
            {
                "type": "ActionSet",
                "actions": [
                    {
                        "type": "Action.Submit",
                        "title": "Submit",
                        "style": "positive",
                        "id": "222",
                        "data": {
                            "card_name": "{{ card_name }}"
                        }
                    }
                ],
                "separator": true
            }
        ]
    }
}]